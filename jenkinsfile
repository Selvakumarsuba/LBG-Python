pipeline {
    agent any
    stages {
        stage('Build Images') {
            steps {
                sh '''
                docker build -t selvasuba/trio-task-db:latest ./db
                docker build -t selvasuba/trio-task-db:4{BUILD_NUMBER} ./db
                docker build -t selvasuba/trio-task-app:latest ./flask-app
                docker build -t selvasuba/trio-task-app:${BUILD_NUMBER} ./flask-app
                docker build -t selvasuba/trio-task-db:latest ./nginx
                docker build -t selvasuba/trio-task-app:${BUILD_NUMBER} ./nginx
                
                 '''
            }  
        }
        stage('Push Images'){
            steps{
                sh'''
                
                docker push selvasuba/trio-task-db
                docker push selvasuba/trio-task-db:${BUILD_NUMBER}
                docker push selvasuba/trio-task-app
                docker push selvasuba/trio-task-app:${BUILD_NUMBER}
                docker push selvasuba/trio-task-rp
                docker push selvasuba/trio-task-rp:${BUILD_NUMBER}
                
                
                '''
            }
        }
        stage('Deploy containers') {
            steps{
                sh '''

                ssh jenkins@selva-selva1 << EOF
                docker pull selvasuba/trio-task-app
                docker pull selvasuba/trio-task-dp
                docker pull selvasuba/trio-task-rp
                docker netwrok create trio
                docker volume create trio
                docker run -d -e MYSQL_ROOT_PASSWORD -v --netwrok trio --name mysql selvasuba/trio-task-db
                docker run -d -e MYSQL_ROOT_PASSWORD --netwrok trio --name flash-app selvasuba/trio-task-db
                docker run -d -p 80:80 --network trio  --name ngnix selvasuba/trio-task-rp
                
                '''
            }

        }
    }
}